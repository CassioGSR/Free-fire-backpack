{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",  // Nome da tarefa
            "command": "C:\\MinGW\\bin\\gcc.exe",  // Caminho para o compilador GCC
            "args": [
                "-fdiagnostics-color=always",  // Ativar cores para diagnósticos
                "-g",  // Gerar informações de depuração
                "${file}",  // Arquivo C atual
                "-o", 
                "${fileDirname}\\${fileBasenameNoExtension}.exe"  // Arquivo de saída
            ],
            "options": {
                "cwd": "${fileDirname}"  // Diretório de trabalho
            },
            "problemMatcher": ["$gcc"],  // Associar erros ao GCC
            "group": {
                "kind": "build",  // Grupo de compilação
                "isDefault": true  // Tarefa de compilação padrão
            },
            "detail": "Task generated by Debugger."  // Detalhes
        }
    ]
}